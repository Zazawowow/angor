<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:a="clr-namespace:AngorApp.UI.Shared.Controls">
    <Design.PreviewWith>
        <a:PageContainer Width="620" Height="200">
        </a:PageContainer>
    </Design.PreviewWith>

    <Styles.Resources>
        <ControlTheme TargetType="a:PageContainer" x:Key="{x:Type a:PageContainer}">
            <Setter Property="Template">
                <ControlTemplate>
                    <Border Container.Name="Root" Container.Sizing="Width">
                        <ContentPresenter x:Name="ContentPresenter" Content="{TemplateBinding Content}" />
                    </Border>
                </ControlTemplate>
            </Setter>

            <ContainerQuery Name="Root" Query="min-width:0">
                <Style Selector="ContentPresenter#ContentPresenter">
                    <Setter Property="Margin" Value="16,16,16,16" />
                </Style>
            </ContainerQuery>
            <ContainerQuery Name="Root" Query="min-width:600">
                <Style Selector="ContentPresenter#ContentPresenter">
                    <Setter Property="Margin" Value="24,24,24,24" />
                </Style>
            </ContainerQuery>
        </ControlTheme>
    </Styles.Resources>

</Styles>