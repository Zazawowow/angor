<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:shell="clr-namespace:AngorApp.UI.Shell"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="650"
             x:Class="AngorApp.UI.Shell.ShellView" x:DataType="shell:IShellViewModel" Background="{DynamicResource AppBackground}">

    <Design.DataContext>
        <shell:ShellViewModelSample />
    </Design.DataContext>

    <Grid x:Name="TopBar" Margin="0,24,24,24" ColumnDefinitions="Auto *" RowDefinitions="42 *" ColumnSpacing="20" RowSpacing="20">
        <PathIcon Height="32" Foreground="{DynamicResource Brand}" Width="32" Data="{StaticResource AngorLogo}" />
        <DockPanel Grid.Row="0" Grid.Column="1" Dock="Top">
            <DockPanel DockPanel.Dock="Top" HorizontalSpacing="20">
                <TextBlock FontWeight="Bold" VerticalAlignment="Center" FontSize="20" Text="{Binding SelectedSection.FriendlyName}" />
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Right" Spacing="16" Orientation="Horizontal">
                    <StackPanel x:Name="AccountPanel" IsVisible="{Binding !!Wallets.Count}" Spacing="16" Orientation="Horizontal">
                        <TextBlock VerticalAlignment="Center">
                            <TextBlock.Inlines>
                                <Run Classes="Thin">Invested:</Run>
                                <Run Classes="Label">0.0000 BTC</Run>
                            </TextBlock.Inlines>
                        </TextBlock>
                        <TextBlock VerticalAlignment="Center">
                            <TextBlock.Inlines>
                                <Run Classes="Thin">Available:</Run>
                                <Run Classes="Label">10.0000 BTC</Run>
                            </TextBlock.Inlines>
                        </TextBlock>
                        <ComboBox SelectedItem="{Binding CurrentWallet}" VerticalAlignment="Center" ItemsSource="{Binding Wallets}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <EdgePanel IconOptions.Size="18" Foreground="{DynamicResource TextMuted}" StartContent="{Icon fa-wallet}" Content="{Binding Name}" />
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>
                    <ToggleButton Classes="Widget" IsChecked="{Binding IsDarkThemeEnabled, Mode=TwoWay}">
                        <ToggleButton.Content>
                            <PathIcon Foreground="{DynamicResource TextMuted}" Data="{DynamicResource Sun}" />
                        </ToggleButton.Content>
                    </ToggleButton>
                    <EnhancedButton Classes="Widget" Icon="{Icon mdi-cog}" Command="{Binding GoToSettings}" />
                </StackPanel>
            </DockPanel>
        </DockPanel>
        <!--
            SectionStrip layout properties (Zafiro template internals):
              Padding       = outer scrollviewer/itemscontrol padding
              ItemPadding   = Margin on the inner HorizontalItem DockPanel â€” set to 0 so
                              SectionStripItem.Padding (in SectionStrip.axaml) is the sole padding
              HorizontalIconLabelSpacing = gap between icon and label text
              ItemSpacing   = StackPanel.Spacing between group blocks; we use 0 and
                              drive inter-group spacing via SectionStripGroupHeader.Margin instead
        -->
        <SectionStrip Classes="Nav" Grid.Row="1" Grid.Column="0"
                       SelectedSection="{Binding SelectedSection}"
                       IconSize="20"
                       Width="200"
                       HorizontalAlignment="Left"
                       Sections="{Binding SidebarSections}"
                       Padding="8,8,8,8"
                       ItemPadding="0"
                       HorizontalIconLabelSpacing="10"
                       ItemSpacing="0" />
        <!-- Web: main content area is transparent; individual section cards carry their own backgrounds.
             TiledLogoBrush belongs on home cards (see HomeSectionView), not here. -->
        <OverlayBorder Grid.Row="1" Grid.Column="1" Classes="Panel" Padding="0" ClipToBounds="False">
            <Frame Content="{Binding SelectedSection.Navigator.Content^}" BackCommand="{Binding SelectedSection.Navigator.Back}" ClipToBounds="False">
                <Interaction.Behaviors>
                    <AutoHeaderFooterBehavior />
                </Interaction.Behaviors>
            </Frame>
        </OverlayBorder>
        <!-- App-wide crosshatch texture overlay, spanning entire shell (matching web .app-container::before) -->
        <Border Grid.ColumnSpan="2" Grid.RowSpan="2" Background="{DynamicResource AppTextureBrush}" IsHitTestVisible="False" />
    </Grid>
</UserControl>
