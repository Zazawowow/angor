<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:portfolio="clr-namespace:Avalonia2.UI.Sections.Portfolio"
             xmlns:controls="clr-namespace:Avalonia2.UI.Shared.Controls"
             xmlns:asyncImageLoader="clr-namespace:AsyncImageLoader;assembly=AsyncImageLoader.Avalonia"
             mc:Ignorable="d" d:DesignWidth="1100" d:DesignHeight="800"
             x:Class="Avalonia2.UI.Sections.Portfolio.PortfolioView"
             x:DataType="portfolio:PortfolioViewModel">
    <Design.DataContext>
        <portfolio:PortfolioViewModel />
    </Design.DataContext>

    <!-- Vue: .investment-card:hover → translateY(-4px) + box-shadow 0 8px 24px rgba(0,0,0,0.15), 0.3s ease -->
    <UserControl.Styles>
        <Style Selector="Border#InvestmentCardBorder:pointerover">
            <Setter Property="RenderTransform" Value="translate(0px, -4px)" />
            <Setter Property="BoxShadow" Value="{DynamicResource ItemShadowHover}" />
        </Style>
    </UserControl.Styles>

    <Panel>
        <!-- ═══════════════════════════════════════════════════════ -->
        <!-- EMPTY STATE: shown when HasInvestments = false          -->
        <!-- Vue: "FUNDED" title, "You haven't funded any projects   -->
        <!-- yet. Browse the latest to find one." description,       -->
        <!-- "Find Projects" button with search icon                 -->
        <!-- ═══════════════════════════════════════════════════════ -->
        <controls:EmptyState Title="FUNDED"
                             Description="You haven't funded any projects yet. Browse the latest to find one."
                             DescriptionFontSize="20"
                             HasButton="True"
                             ButtonText="Find Projects"
                             HasButtonIcon="True"
                             ButtonIconData="{StaticResource Search}"
                             IsVisible="{Binding !HasInvestments}" />

        <!-- ═══════════════════════════════════════════════════════ -->
        <!-- INVESTMENT DETAIL: shown when SelectedInvestment != null -->
        <!-- ═══════════════════════════════════════════════════════ -->
        <Panel IsVisible="{Binding SelectedInvestment, Converter={x:Static ObjectConverters.IsNotNull}}">
            <portfolio:InvestmentDetailView DataContext="{Binding SelectedInvestment}" />
        </Panel>

        <!-- ═══════════════════════════════════════════════════════ -->
        <!-- PORTFOLIO LIST: shown when HasInvestments = true         -->
        <!-- and no investment detail is selected                    -->
        <!-- ═══════════════════════════════════════════════════════ -->
        <!-- Portfolio list visible when: has investments AND no detail selected -->
        <!-- Grid with fixed left column + scrollable right column -->
        <!-- Visibility managed by code-behind: visible when HasInvestments && SelectedInvestment == null -->
        <Grid ColumnDefinitions="380,*" RowDefinitions="*" Margin="24" Name="PortfolioListPanel"
              IsVisible="False">

                <!-- ═══════════════════════════════════════ -->
                <!-- LEFT PANEL: Portfolio Summary Card      -->
                <!-- (STICKY — does not scroll)              -->
                <!-- ═══════════════════════════════════════ -->
                <Border Grid.Column="0"
                        Background="{DynamicResource Surface}"
                        BorderBrush="{DynamicResource Stroke}"
                        BorderThickness="1"
                        CornerRadius="16"
                        BoxShadow="{DynamicResource ItemShadow}"
                        Padding="24"
                        Margin="0,0,24,0"
                        VerticalAlignment="Stretch">
                    <StackPanel Spacing="20" VerticalAlignment="Center">

                        <!-- Angor Logo — centered -->
                        <Panel HorizontalAlignment="Center" Width="80" Height="80" Margin="0,8,0,0">
                            <Path Data="{StaticResource AngorLogo}"
                                  Fill="#4B7C5A"
                                  Stretch="Uniform" />
                        </Panel>

                        <!-- Title -->
                        <TextBlock Text="PORTFOLIO"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource TextStrong}"
                                   HorizontalAlignment="Center"
                                   LetterSpacing="1" />

                        <!-- Subtitle -->
                        <TextBlock Text="Track your investments and portfolio performance."
                                   FontSize="14"
                                   Foreground="{DynamicResource TextMuted}"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"
                                   HorizontalAlignment="Center" />

                        <!-- Buttons Row: Refresh + Penalties -->
                        <StackPanel Orientation="Horizontal" Spacing="12" HorizontalAlignment="Center">
                            <Button Classes="Primary" Padding="20,8">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <Viewbox Width="14" Height="14" VerticalAlignment="Center">
                                        <Border Width="14" Height="14" Background="White">
                                            <Border.OpacityMask>
                                                <ImageBrush Source="/Assets/refresh.png" Stretch="Uniform" />
                                            </Border.OpacityMask>
                                        </Border>
                                    </Viewbox>
                                    <TextBlock Text="Refresh" FontSize="13" FontWeight="SemiBold"
                                               Foreground="White" VerticalAlignment="Center" />
                                </StackPanel>
                            </Button>
                            <Button Padding="20,8"
                                    Background="#F7931A" CornerRadius="8">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <Viewbox Width="14" Height="14" VerticalAlignment="Center">
                                        <Path Data="{StaticResource Padlock}"
                                              Stroke="White"
                                              StrokeThickness="1.5"
                                              StrokeLineCap="Round"
                                              StrokeJoin="Round"
                                              Width="24" Height="24" Stretch="Uniform" />
                                    </Viewbox>
                                    <TextBlock Text="Penalties" FontSize="13" FontWeight="SemiBold"
                                               Foreground="White" VerticalAlignment="Center" />
                                </StackPanel>
                            </Button>
                        </StackPanel>

                        <!-- Stats Grid: 2x2 -->
                        <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto"
                              Margin="0,4,0,0">
                            <!-- Funded Projects -->
                            <Border Grid.Row="0" Grid.Column="0"
                                    Background="{DynamicResource SurfaceLow}"
                                    BorderBrush="{DynamicResource Stroke}"
                                    BorderThickness="1"
                                    CornerRadius="12"
                                    Padding="16"
                                    Margin="0,0,8,8">
                                <StackPanel Spacing="8">
                                    <Border Width="28" Height="28" CornerRadius="14"
                                            Background="#1A4B7C5A" HorizontalAlignment="Left">
                                        <Viewbox Width="16" Height="16">
                                            <Path Data="{StaticResource NavIconDocument}"
                                                  Stroke="{DynamicResource TextMuted}"
                                                  StrokeThickness="1.5"
                                                  StrokeLineCap="Round"
                                                  StrokeJoin="Round"
                                                  Width="24" Height="24" Stretch="Uniform" />
                                        </Viewbox>
                                    </Border>
                                    <TextBlock Text="{Binding FundedProjects}"
                                               FontSize="20" FontWeight="Bold"
                                               Foreground="{DynamicResource TextStrong}" />
                                    <TextBlock Text="Funded Projects"
                                               FontSize="12"
                                               Foreground="{DynamicResource TextMuted}" />
                                </StackPanel>
                            </Border>

                            <!-- Total Invested -->
                            <Border Grid.Row="0" Grid.Column="1"
                                    Background="{DynamicResource SurfaceLow}"
                                    BorderBrush="{DynamicResource Stroke}"
                                    BorderThickness="1"
                                    CornerRadius="12"
                                    Padding="16"
                                    Margin="8,0,0,8">
                                <StackPanel Spacing="8">
                                    <Border Width="28" Height="28" CornerRadius="14"
                                            Background="#F7931A" HorizontalAlignment="Left">
                                        <Viewbox Width="16" Height="16">
                                            <Path Data="{StaticResource BitcoinSymbol}"
                                                  Fill="White"
                                                  Width="24" Height="24" Stretch="Uniform" />
                                        </Viewbox>
                                    </Border>
                                    <StackPanel Orientation="Horizontal" Spacing="4">
                                        <TextBlock Text="{Binding TotalInvested}"
                                                   FontSize="18" FontWeight="Bold"
                                                   Foreground="{DynamicResource TextStrong}" />
                                        <TextBlock Text="BTC"
                                                   FontSize="11"
                                                   Foreground="{DynamicResource TextMuted}"
                                                   VerticalAlignment="Bottom" Margin="0,0,0,1" />
                                    </StackPanel>
                                    <TextBlock Text="Total invested"
                                               FontSize="12"
                                               Foreground="{DynamicResource TextMuted}" />
                                </StackPanel>
                            </Border>

                            <!-- Recovered to penalty -->
                            <Border Grid.Row="1" Grid.Column="0"
                                    Background="{DynamicResource SurfaceLow}"
                                    BorderBrush="{DynamicResource Stroke}"
                                    BorderThickness="1"
                                    CornerRadius="12"
                                    Padding="16"
                                    Margin="0,0,8,0">
                                <StackPanel Spacing="8">
                                    <Border Width="28" Height="28" CornerRadius="14"
                                            Background="#1A4B7C5A" HorizontalAlignment="Left">
                                        <Viewbox Width="16" Height="16">
                                            <Border Width="16" Height="16" Background="{DynamicResource TextMuted}">
                                                <Border.OpacityMask>
                                                    <ImageBrush Source="/Assets/refresh.png" Stretch="Uniform" />
                                                </Border.OpacityMask>
                                            </Border>
                                        </Viewbox>
                                    </Border>
                                    <StackPanel Orientation="Horizontal" Spacing="4">
                                        <TextBlock Text="{Binding RecoveredToPenalty}"
                                                   FontSize="18" FontWeight="Bold"
                                                   Foreground="{DynamicResource TextStrong}" />
                                        <TextBlock Text="BTC"
                                                   FontSize="11"
                                                   Foreground="{DynamicResource TextMuted}"
                                                   VerticalAlignment="Bottom" Margin="0,0,0,1" />
                                    </StackPanel>
                                    <TextBlock Text="Recovered to penalty"
                                               FontSize="12"
                                               Foreground="{DynamicResource TextMuted}"
                                               TextWrapping="Wrap" />
                                </StackPanel>
                            </Border>

                            <!-- Projects in Recovery -->
                            <Border Grid.Row="1" Grid.Column="1"
                                    Background="{DynamicResource SurfaceLow}"
                                    BorderBrush="{DynamicResource Stroke}"
                                    BorderThickness="1"
                                    CornerRadius="12"
                                    Padding="16"
                                    Margin="8,0,0,0">
                                <StackPanel Spacing="8">
                                    <Border Width="28" Height="28" CornerRadius="14"
                                            Background="#1A4B7C5A" HorizontalAlignment="Left">
                                        <Viewbox Width="16" Height="16">
                                            <Path Data="{StaticResource Shield}"
                                                  Fill="{DynamicResource TextMuted}"
                                                  Width="24" Height="24" Stretch="Uniform" />
                                        </Viewbox>
                                    </Border>
                                    <TextBlock Text="{Binding ProjectsInRecovery}"
                                               FontSize="20" FontWeight="Bold"
                                               Foreground="{DynamicResource TextStrong}" />
                                    <TextBlock Text="Projects in Recovery"
                                               FontSize="12"
                                               Foreground="{DynamicResource TextMuted}"
                                               TextWrapping="Wrap" />
                                </StackPanel>
                            </Border>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- ═══════════════════════════════════════ -->
                <!-- RIGHT PANEL: Your Investments           -->
                <!-- (Scrollable — only this column scrolls) -->
                <!-- ═══════════════════════════════════════ -->
                <controls:ScrollableView Grid.Column="1" ContentPadding="0,0,16,0">
                <StackPanel Spacing="16">

                    <!-- Section heading -->
                    <TextBlock Text="Your Investments"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="{DynamicResource TextStrong}" />

                    <!-- Investment Cards — responsive grid for 2 columns -->
                    <ItemsControl ItemsSource="{Binding Investments}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <controls:ResponsiveGrid MinItemWidth="320" ColumnSpacing="16" RowSpacing="16" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate x:DataType="portfolio:InvestmentViewModel">
                                <!-- Vue: .investment-card hover → translateY(-4px) + enhanced shadow, 0.3s ease -->
                                <Border Background="{DynamicResource Surface}"
                                        BorderBrush="{DynamicResource Stroke}"
                                        BorderThickness="1"
                                        CornerRadius="16"
                                        ClipToBounds="False"
                                        BoxShadow="{DynamicResource ItemShadow}"
                                        Name="InvestmentCardBorder"
                                        RenderTransform="translate(0px, 0px)">
                                    <Border.Transitions>
                                        <Transitions>
                                            <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.3" />
                                            <BoxShadowsTransition Property="BoxShadow" Duration="0:0:0.3" />
                                        </Transitions>
                                    </Border.Transitions>
                                    <!-- Inner clip border for banner image overflow -->
                                    <Border CornerRadius="15" ClipToBounds="True">
                                    <StackPanel Spacing="0">

                                        <!-- Banner + Avatar — Vue: .investment-card-header h:120px, .investment-logo bottom:-32px left:20px -->
                                        <Panel Height="120">
                                            <Border Background="{DynamicResource SurfaceLow}" />
                                            <asyncImageLoader:AdvancedImage Stretch="UniformToFill"
                                                                            Source="{Binding BannerUrl}" />
                                            <!-- Avatar -->
                                            <Panel VerticalAlignment="Bottom" HorizontalAlignment="Left"
                                                   Margin="20,0,0,-32">
                                                <Border CornerRadius="32" Width="64" Height="64"
                                                        Background="{DynamicResource Surface}"
                                                        BoxShadow="0 4 12 0 #26000000"
                                                        ClipToBounds="True">
                                                    <asyncImageLoader:AdvancedImage Stretch="UniformToFill"
                                                                                    Source="{Binding AvatarUrl}" />
                                                </Border>
                                            </Panel>
                                        </Panel>

                                        <!-- Content area — Vue: padding 20px, padding-top 48px -->
                                        <StackPanel Spacing="12" Margin="20,48,20,20">

                                            <!-- Type + Status pills -->
                                            <!-- Vue: .investment-pills gap:8px, .investment-type-pill, .stage-status -->
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <!-- Type pill: Investment (blue), Funding (amber), Subscription (purple) -->
                                                <!-- Uses DynamicResource for theme-aware colors -->
                                                <Border CornerRadius="12" Padding="12,4"
                                                        Background="{DynamicResource TypeInvestBackground}"
                                                        IsVisible="{Binding IsTypeInvest}">
                                                    <TextBlock Text="{Binding TypeLabel}"
                                                               FontSize="12" FontWeight="SemiBold"
                                                               Foreground="{DynamicResource TypeInvestForeground}" />
                                                </Border>
                                                <Border CornerRadius="12" Padding="12,4"
                                                        Background="{DynamicResource TypeFundBackground}"
                                                        IsVisible="{Binding IsTypeFund}">
                                                    <TextBlock Text="{Binding TypeLabel}"
                                                               FontSize="12" FontWeight="SemiBold"
                                                               Foreground="{DynamicResource TypeFundForeground}" />
                                                </Border>
                                                <Border CornerRadius="12" Padding="12,4"
                                                        Background="{DynamicResource TypeSubscriptionBackground}"
                                                        IsVisible="{Binding IsTypeSubscription}">
                                                    <TextBlock Text="{Binding TypeLabel}"
                                                               FontSize="12" FontWeight="SemiBold"
                                                               Foreground="{DynamicResource TypeSubscriptionForeground}" />
                                                </Border>

                                                <!-- Status pill — color varies by StatusClass, using DynamicResource -->
                                                <!-- Awaiting Approval (waiting) -->
                                                <Border CornerRadius="12" Padding="12,4"
                                                        BorderThickness="1"
                                                        IsVisible="{Binding IsStatusWaiting}"
                                                        Background="{DynamicResource StatusWaitingBackground}"
                                                        BorderBrush="{DynamicResource StatusWaitingBorder}">
                                                    <TextBlock Text="{Binding StatusText}"
                                                               FontSize="12" FontWeight="SemiBold"
                                                               Foreground="{DynamicResource StatusWaitingForeground}" />
                                                </Border>

                                                <!-- Transaction signed (signed) -->
                                                <Border CornerRadius="12" Padding="12,4"
                                                        BorderThickness="1"
                                                        IsVisible="{Binding IsStatusSigned}"
                                                        Background="{DynamicResource StatusSignedBackground}"
                                                        BorderBrush="{DynamicResource StatusSignedBorder}">
                                                    <TextBlock Text="{Binding StatusText}"
                                                               FontSize="12" FontWeight="SemiBold"
                                                               Foreground="{DynamicResource StatusSignedForeground}" />
                                                </Border>

                                                <!-- Investment Active (active) — same colors as signed -->
                                                <Border CornerRadius="12" Padding="12,4"
                                                        BorderThickness="1"
                                                        IsVisible="{Binding IsStatusActive}"
                                                        Background="{DynamicResource StatusSignedBackground}"
                                                        BorderBrush="{DynamicResource StatusSignedBorder}">
                                                    <TextBlock Text="{Binding StatusText}"
                                                               FontSize="12" FontWeight="SemiBold"
                                                               Foreground="{DynamicResource StatusSignedForeground}" />
                                                </Border>

                                                <!-- Funds recovered -->
                                                <Border CornerRadius="12" Padding="12,4"
                                                        BorderThickness="1"
                                                        IsVisible="{Binding IsStatusRecovered}"
                                                        Background="{DynamicResource StatusRecoveredBackground}"
                                                        BorderBrush="{DynamicResource StatusRecoveredBorder}">
                                                    <TextBlock Text="{Binding StatusText}"
                                                               FontSize="12" FontWeight="SemiBold"
                                                               Foreground="{DynamicResource StatusRecoveredForeground}" />
                                                </Border>
                                            </StackPanel>

                                            <!-- Project name — Vue: .investment-title font-size:16px font-weight:700 -->
                                            <TextBlock Text="{Binding ProjectName}"
                                                       FontSize="16"
                                                       FontWeight="Bold"
                                                       Foreground="{DynamicResource TextStrong}" />

                                            <!-- Funding info — Vue: .investment-stats flex justify-between -->
                                            <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto"
                                                  Margin="0,4,0,0">
                                                <TextBlock Grid.Row="0" Grid.Column="0"
                                                           Text="Funding:"
                                                           FontSize="13"
                                                           Foreground="{DynamicResource TextMuted}"
                                                           Margin="0,0,0,8" />
                                                <TextBlock Grid.Row="0" Grid.Column="1"
                                                           Text="{Binding FundingAmount}"
                                                           FontSize="14"
                                                           FontWeight="Bold"
                                                           Foreground="{DynamicResource TextStrong}"
                                                           HorizontalAlignment="Right" />

                                                <TextBlock Grid.Row="1" Grid.Column="0"
                                                           Text="Date:"
                                                           FontSize="13"
                                                           Foreground="{DynamicResource TextMuted}" />
                                                <TextBlock Grid.Row="1" Grid.Column="1"
                                                           Text="{Binding FundingDate}"
                                                           FontSize="13"
                                                           Foreground="{DynamicResource TextMuted}"
                                                           HorizontalAlignment="Right" />
                                            </Grid>

                                            <!-- Payment Progress (subscription/fund type with payment plan) -->
                                            <!-- Vue: .subscription-payment-bar-container -->
                                            <StackPanel IsVisible="{Binding HasPaymentPlan}">
                                                <DockPanel Margin="0,4,0,0">
                                                    <TextBlock Text="Payment Progress"
                                                               FontSize="13"
                                                               Foreground="{DynamicResource TextMuted}"
                                                               DockPanel.Dock="Left"
                                                               VerticalAlignment="Center" />
                                                    <TextBlock HorizontalAlignment="Right"
                                                               FontSize="13"
                                                               Foreground="#4B7C5A"
                                                               FontWeight="Bold"
                                                               VerticalAlignment="Center">
                                                        <Run Text="{Binding PaymentSegmentsCompleted, Mode=OneWay}" /><Run Text="/" /><Run Text="{Binding PaymentSegmentsTotal, Mode=OneWay}" />
                                                    </TextBlock>
                                                </DockPanel>

                                                <!-- Progress segments — Vue: .subscription-payment-segments gap:4px -->
                                                <Grid ColumnDefinitions="*,4,*,4,*" Margin="0,8,0,0">
                                                    <Panel Grid.Column="0">
                                                        <Border Height="6" CornerRadius="3"
                                                                Background="{DynamicResource Stroke}"
                                                                IsVisible="{Binding !IsSegment1Complete}" />
                                                        <Border Height="6" CornerRadius="3"
                                                                IsVisible="{Binding IsSegment1Complete}">
                                                            <Border.Background>
                                                                <LinearGradientBrush StartPoint="0%,50%" EndPoint="100%,50%">
                                                                    <GradientStop Color="#4B7C5A" Offset="0" />
                                                                    <GradientStop Color="#3D6448" Offset="1" />
                                                                </LinearGradientBrush>
                                                            </Border.Background>
                                                        </Border>
                                                    </Panel>
                                                    <Panel Grid.Column="2">
                                                        <Border Height="6" CornerRadius="3"
                                                                Background="{DynamicResource Stroke}"
                                                                IsVisible="{Binding !IsSegment2Complete}" />
                                                        <Border Height="6" CornerRadius="3"
                                                                IsVisible="{Binding IsSegment2Complete}">
                                                            <Border.Background>
                                                                <LinearGradientBrush StartPoint="0%,50%" EndPoint="100%,50%">
                                                                    <GradientStop Color="#4B7C5A" Offset="0" />
                                                                    <GradientStop Color="#3D6448" Offset="1" />
                                                                </LinearGradientBrush>
                                                            </Border.Background>
                                                        </Border>
                                                    </Panel>
                                                    <Panel Grid.Column="4">
                                                        <Border Height="6" CornerRadius="3"
                                                                Background="{DynamicResource Stroke}"
                                                                IsVisible="{Binding !IsSegment3Complete}" />
                                                        <Border Height="6" CornerRadius="3"
                                                                IsVisible="{Binding IsSegment3Complete}">
                                                            <Border.Background>
                                                                <LinearGradientBrush StartPoint="0%,50%" EndPoint="100%,50%">
                                                                    <GradientStop Color="#4B7C5A" Offset="0" />
                                                                    <GradientStop Color="#3D6448" Offset="1" />
                                                                </LinearGradientBrush>
                                                            </Border.Background>
                                                        </Border>
                                                    </Panel>
                                                </Grid>
                                            </StackPanel>

                                            <!-- Progress bar (non-payment-plan) -->
                                            <!-- Vue: .progress-bar-container h:6px bg:#e5e7eb, .progress-bar-fill gradient -->
                                            <Panel IsVisible="{Binding !HasPaymentPlan}" Margin="0,12,0,0">
                                                <Border Height="6" CornerRadius="3"
                                                        Background="{DynamicResource Stroke}" />
                                                <!-- Green gradient fill — scales horizontally by Progress (0-100) -->
                                                <Border Height="6" CornerRadius="3"
                                                        HorizontalAlignment="Stretch"
                                                        RenderTransformOrigin="0,0.5">
                                                    <Border.Background>
                                                        <LinearGradientBrush StartPoint="0%,50%" EndPoint="100%,50%">
                                                            <GradientStop Color="#4B7C5A" Offset="0" />
                                                            <GradientStop Color="#3D6448" Offset="1" />
                                                        </LinearGradientBrush>
                                                    </Border.Background>
                                                    <Border.RenderTransform>
                                                        <ScaleTransform ScaleX="{Binding ProgressFraction}" ScaleY="1" />
                                                    </Border.RenderTransform>
                                                </Border>
                                            </Panel>

                                            <!-- Manage button — Vue: .manage-investment-card-btn border:2px solid #4B7C5A -->
                                            <Button HorizontalAlignment="Stretch"
                                                    HorizontalContentAlignment="Center"
                                                    Padding="16,10" Margin="0,4,0,0"
                                                    Name="ManageButton"
                                                    Tag="{Binding}"
                                                    Background="Transparent"
                                                    BorderBrush="#4B7C5A"
                                                    BorderThickness="2"
                                                    CornerRadius="8">
                                                <StackPanel Orientation="Horizontal" Spacing="8">
                                                    <Viewbox Width="16" Height="16" VerticalAlignment="Center">
                                                        <Path Data="{StaticResource NavIconDocument}"
                                                              Stroke="#4B7C5A"
                                                              StrokeThickness="1.5"
                                                              StrokeLineCap="Round"
                                                              StrokeJoin="Round"
                                                              Width="24" Height="24" Stretch="Uniform" />
                                                    </Viewbox>
                                                    <TextBlock Text="Manage"
                                                               FontSize="14"
                                                               FontWeight="SemiBold"
                                                               Foreground="#4B7C5A" />
                                                </StackPanel>
                                            </Button>
                                        </StackPanel>
                                    </StackPanel>
                                    </Border>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
                </controls:ScrollableView>
            </Grid>
    </Panel>
</UserControl>
