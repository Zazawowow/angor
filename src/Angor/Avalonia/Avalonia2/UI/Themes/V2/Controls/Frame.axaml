<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        <Border Padding="20" Background="Gray">
            <Frame Footer="" />
        </Border>
    </Design.PreviewWith>

    <!-- Frame: HeaderPadding=0 so the header border collapses when empty (e.g. Home).
         Spacing around back button and header content is handled via their own Margins. -->
    <Style Selector="Frame">
        <Setter Property="ClipToBounds" Value="False" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="FooterBackground" Value="{DynamicResource Surface}" />
        <Setter Property="FooterPadding" Value="24,24,24,24" />
    </Style>
    <Style Selector="Frame EnhancedButton#BackButton">
        <Setter Property="ClipToBounds" Value="False" />
        <Setter Property="Icon" Value="{Icon mdi-chevron-left}" />
        <Setter Property="Content" Value="Back" />
        <Setter Property="Height" Value="44" />
        <Setter Property="Spacing" Value="2" />
        <Setter Property="Padding" Value="10 10 20 10" />
        <Setter Property="Margin" Value="24,16,8,16" />
        <Setter Property="BoxShadow" Value="{DynamicResource ItemShadowBig}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="BorderBrush" Value="{DynamicResource Border}" />
        <Setter Property="Background" Value="{DynamicResource Surface}" />
        <Setter Property="Foreground" Value="{DynamicResource TextStrong}" />
    </Style>

    <!-- Collapse header area when there is no header content -->
    <Style Selector="Frame ContentPresenter#Header">
        <Setter Property="Margin" Value="0,16,24,16" />
        <Setter Property="IsVisible" Value="{Binding $self.Content, Converter={x:Static ObjectConverters.IsNotNull}}" />
    </Style>

    <Style Selector="Frame ContentPresenter#Footer">
        <Setter Property="BoxShadow" Value="{DynamicResource ItemShadow}" />
        <Setter Property="IsVisible" Value="{Binding $self.Content, Converter={x:Static ObjectConverters.IsNotNull}}" />
    </Style>

    <!-- Standardise Cancel/Next button proportions in footer -->
    <Style Selector="Frame ContentPresenter#Footer EnhancedButton">
        <Setter Property="Padding" Value="24 12" />
    </Style>

    <!-- Allow shadows to render; Content needs ClipToBounds=False for Home panels layout -->
    <Style Selector="Frame /template/ ContentPresenter">
        <Setter Property="ClipToBounds" Value="False" />
    </Style>
</Styles>