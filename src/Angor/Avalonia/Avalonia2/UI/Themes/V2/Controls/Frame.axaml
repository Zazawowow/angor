<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:Avalonia2.UI.Shared.Controls"
        xmlns:i="https://github.com/projektanker/icons.avalonia">
    <Design.PreviewWith>
        <Border Padding="20" Background="Gray">
            <controls:Frame Footer="" />
        </Border>
    </Design.PreviewWith>

    <Styles.Resources>
        <!-- Default ControlTheme for controls:Frame â€” Back button + Header top, Content center, Footer bottom -->
        <ControlTheme x:Key="{x:Type controls:Frame}" TargetType="controls:Frame">
            <Setter Property="Template">
                <ControlTemplate>
                    <DockPanel>
                        <!-- Header row: Back button + Header -->
                        <DockPanel DockPanel.Dock="Top">
                            <controls:IconButton x:Name="BackButton"
                                                 DockPanel.Dock="Left" />
                            <ContentPresenter x:Name="Header"
                                              Content="{TemplateBinding Header}"
                                              ContentTemplate="{TemplateBinding HeaderTemplate}"
                                              VerticalAlignment="Center" />
                        </DockPanel>
                        <!-- Footer -->
                        <Border DockPanel.Dock="Bottom"
                                Background="{TemplateBinding FooterBackground}"
                                Padding="{TemplateBinding FooterPadding}">
                            <ContentPresenter x:Name="Footer"
                                              Content="{TemplateBinding Footer}" />
                        </Border>
                        <!-- Content -->
                        <ContentPresenter x:Name="PART_ContentPresenter"
                                          Content="{TemplateBinding Content}"
                                          ContentTemplate="{TemplateBinding ContentTemplate}"
                                          Padding="{TemplateBinding Padding}" />
                    </DockPanel>
                </ControlTemplate>
            </Setter>
        </ControlTheme>
    </Styles.Resources>

    <!-- Frame: HeaderPadding=0 so the header border collapses when empty (e.g. Home).
         Spacing around back button and header content is handled via their own Margins. -->
    <Style Selector="controls|Frame">
        <Setter Property="ClipToBounds" Value="False" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="FooterBackground" Value="{DynamicResource Surface}" />
        <Setter Property="FooterPadding" Value="24,24,24,24" />
    </Style>
    <Style Selector="controls|Frame controls|IconButton#BackButton">
        <Setter Property="ClipToBounds" Value="False" />
        <Setter Property="Content" Value="Back" />
        <Setter Property="Height" Value="44" />
        <Setter Property="Spacing" Value="2" />
        <Setter Property="Padding" Value="10 10 20 10" />
        <Setter Property="Margin" Value="24,16,8,16" />
        <Setter Property="BoxShadow" Value="{DynamicResource ItemShadowBig}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="BorderBrush" Value="{DynamicResource Border}" />
        <Setter Property="Background" Value="{DynamicResource Surface}" />
        <Setter Property="Foreground" Value="{DynamicResource TextStrong}" />
        <Setter Property="Icon">
            <Setter.Value>
                <Template>
                    <i:Icon Value="fa-chevron-left" />
                </Template>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Collapse header area when there is no header content -->
    <Style Selector="controls|Frame ContentPresenter#Header">
        <Setter Property="Margin" Value="0,16,24,16" />
        <Setter Property="IsVisible" Value="{Binding $self.Content, Converter={x:Static ObjectConverters.IsNotNull}}" />
    </Style>

    <Style Selector="controls|Frame ContentPresenter#Footer">
        <Setter Property="BoxShadow" Value="{DynamicResource ItemShadow}" />
        <Setter Property="IsVisible" Value="{Binding $self.Content, Converter={x:Static ObjectConverters.IsNotNull}}" />
    </Style>

    <!-- Standardise Cancel/Next button proportions in footer -->
    <Style Selector="controls|Frame ContentPresenter#Footer controls|IconButton">
        <Setter Property="Padding" Value="24 12" />
    </Style>

    <!-- Allow shadows to render; Content needs ClipToBounds=False for Home panels layout -->
    <Style Selector="controls|Frame /template/ ContentPresenter">
        <Setter Property="ClipToBounds" Value="False" />
    </Style>
</Styles>
