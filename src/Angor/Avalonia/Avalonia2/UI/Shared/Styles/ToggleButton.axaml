<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:i="https://github.com/projektanker/icons.avalonia">

    <Styles.Resources>
        <ControlTheme x:Key="ExpandingToggleButton" TargetType="ToggleButton" 
                      BasedOn="{StaticResource {x:Type ToggleButton}}">
            <Style Selector="^[IsChecked=True]">
                <Setter Property="Content">
                    <Setter.Value>
                        <Template>
                            <StackPanel Spacing="10" Orientation="Horizontal">
                                <ContentControl>
                                    <i:Icon Value="fa-solid fa-angle-up" />
                                </ContentControl>
                                <TextBlock>Collapse</TextBlock>
                            </StackPanel>
                        </Template>
                    </Setter.Value>
                </Setter>
            </Style>
            <Style Selector="^[IsChecked=False]">
                <Setter Property="Content">
                    <Setter.Value>
                        <Template>
                            <StackPanel Spacing="10" Orientation="Horizontal">
                                <ContentControl>
                                    <i:Icon Value="fa-solid fa-angle-down" />
                                </ContentControl>
                                <TextBlock>Expand</TextBlock>
                            </StackPanel>
                        </Template>
                    </Setter.Value>
                </Setter>
            </Style>

        </ControlTheme>
        <ControlTheme x:Key="ExpandingToggleButtonNoText" TargetType="ToggleButton" 
                      BasedOn="{StaticResource {x:Type ToggleButton}}">
            <Style Selector="^[IsChecked=True]">
                <Setter Property="Content">
                    <Setter.Value>
                        <Template>
                            <ContentControl>
                                <i:Icon Value="fa-solid fa-angle-up" />
                            </ContentControl>
                        </Template>
                    </Setter.Value>
                </Setter>
            </Style>
            <Style Selector="^[IsChecked=False]">
                <Setter Property="Content">
                    <Setter.Value>
                        <Template>
                            <ContentControl>
                                <i:Icon Value="fa-solid fa-angle-down" />
                            </ContentControl>
                        </Template>
                    </Setter.Value>
                </Setter>
            </Style>

        </ControlTheme>

    </Styles.Resources>
    <Design.PreviewWith>
        <Border Padding="20">
            <ToggleButton Theme="{StaticResource ExpandingToggleButton}" />
        </Border>
    </Design.PreviewWith>
</Styles>
