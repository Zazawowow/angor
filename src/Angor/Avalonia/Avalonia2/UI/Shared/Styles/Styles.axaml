<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:Avalonia2.UI.Shared.Controls">
    <Design.PreviewWith>
        <Border Padding="20">
            <StackPanel Spacing="10">
                <controls:Card Header="Header">
                    <controls:Card Header="Nested header">
                        CONTENT
                    </controls:Card>
                </controls:Card>
            </StackPanel>
        </Border>
    </Design.PreviewWith>

    <Styles.Resources>
        <Color x:Key="SuccessColor">Green</Color>
        <Color x:Key="WarningColor">Gold</Color>
        <Color x:Key="ErrorColor">Red</Color>
        <Color x:Key="DangerColor">Red</Color>

        <x:Double x:Key="FontSizeHuge">32</x:Double>
        <x:Double x:Key="FontSizeLarge">24</x:Double>
        <x:Double x:Key="FontSizeBig">20</x:Double>
        <x:Double x:Key="FontSizeNormal">16</x:Double>
        <x:Double x:Key="FontSizeSmall">12</x:Double>

        <x:Double x:Key="IconSizeHuge">80</x:Double>
        <x:Double x:Key="IconSizeLarge">60</x:Double>
        <x:Double x:Key="IconSizeBig">40</x:Double>
        <x:Double x:Key="IconSizeNormal">30</x:Double>
        <x:Double x:Key="IconSizeSmall">20</x:Double>

        <x:Double x:Key="FlyoutThemeMaxWidth">700</x:Double>

        <ControlTheme x:Key="{x:Type controls:IconButton}" TargetType="controls:IconButton" BasedOn="{StaticResource {x:Type controls:IconButton}}">
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="TextBlock.FontWeight" Value="Bold" />
        </ControlTheme>

        <ControlTheme x:Key="DarkerButton" TargetType="controls:IconButton" BasedOn="{StaticResource {x:Type controls:IconButton}}">
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="TextBlock.FontWeight" Value="Bold" />
        </ControlTheme>
    </Styles.Resources>

    <Style Selector="Separator">
        <Setter Property="Margin" Value="0" />
        <Setter Property="Background" Value="#2B000000" />
        <Setter Property="Height" Value="2" />
    </Style>

    <Style Selector="TextBlock.Dimmed">
        <Setter Property="Foreground" Value="{DynamicResource SystemControlForegroundBaseMediumBrush}" />
    </Style>

    <Style Selector="Border.Alert">
        <Setter Property="Background" Value="{DynamicResource SystemListLowColor}" />
        <Setter Property="BorderBrush" Value="{DynamicResource SystemListMediumColor}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="4" />
        <Setter Property="Padding" Value="10 16" />
        <Setter Property="Margin" Value="0,16" />
    </Style>

    <Style Selector="controls|IconButton.HorizontalStretch">
        <Setter Property="HorizontalAlignment" Value="Stretch" />
    </Style>

    <Style Selector="ListBox.Rounded">
        <Setter Property="CornerRadius" Value="10" />
    </Style>

    <Style Selector=":is(TemplatedControl).Small">
        <Setter Property="FontSize" Value="{StaticResource FontSizeSmall}" />
        <Setter Property="FontWeight" Value="Regular" />
    </Style>

    <Style Selector="controls|Card controls|Card">
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Background" Value="#31000000" />
    </Style>

    <Style Selector=":is(TemplatedControl).NoPadding">
        <Setter Property="Padding" Value="0" />
    </Style>

</Styles>
