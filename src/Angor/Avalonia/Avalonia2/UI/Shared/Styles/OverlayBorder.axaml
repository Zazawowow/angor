<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Styles.Resources>
        <!-- CardOverlayBorder: local replacement for Zafiro's CardOverlayBorder ControlTheme.
             Now targets plain Border since OverlayBorder has been replaced. -->
        <ControlTheme x:Key="CardOverlayBorder" TargetType="Border">
            <Setter Property="BorderBrush" Value="{DynamicResource SystemChromeMediumColor}" />
            <Setter Property="Background" Value="{DynamicResource SystemChromeLowColor}" />
        </ControlTheme>
    </Styles.Resources>
    
    <Design.PreviewWith>
        <Border Theme="{StaticResource CardOverlayBorder}" Padding="20" />
    </Design.PreviewWith>
</Styles>
