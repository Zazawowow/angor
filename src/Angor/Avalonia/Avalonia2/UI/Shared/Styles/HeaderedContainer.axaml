<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:Avalonia2.UI.Shared.Controls">
    <Design.PreviewWith>
        <Border Padding="20">
            <controls:HeaderedContainer Background="Aqua" Header="HEADER">CONTENT</controls:HeaderedContainer>
        </Border>
    </Design.PreviewWith>

    <Styles.Resources>
        <!-- Default ControlTheme for controls:HeaderedContainer â€” Header on top, Content below -->
        <ControlTheme x:Key="{x:Type controls:HeaderedContainer}" TargetType="controls:HeaderedContainer">
            <Setter Property="Template">
                <ControlTemplate>
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{TemplateBinding CornerRadius}"
                            BoxShadow="{TemplateBinding BoxShadow}"
                            Padding="{TemplateBinding Padding}">
                        <DockPanel>
                            <Border DockPanel.Dock="Top"
                                    Background="{TemplateBinding HeaderBackground}"
                                    Padding="{TemplateBinding HeaderPadding}">
                                <ContentPresenter x:Name="Header"
                                                  Content="{TemplateBinding Header}"
                                                  ContentTemplate="{TemplateBinding HeaderTemplate}" />
                            </Border>
                            <Border Padding="{TemplateBinding ContentPadding}">
                                <ContentPresenter x:Name="Content"
                                                  Content="{TemplateBinding Content}"
                                                  ContentTemplate="{TemplateBinding ContentTemplate}" />
                            </Border>
                        </DockPanel>
                    </Border>
                </ControlTemplate>
            </Setter>
        </ControlTheme>
    </Styles.Resources>

    <Style Selector="controls|HeaderedContainer">
        <Setter Property="Padding" Value="0" />
    </Style>
    
    <Style Selector="controls|HeaderedContainer /template/ ContentControl#Header">
        <Setter Property="FontSize" Value="{StaticResource FontSizeNormal}" />
        <Setter Property="FontWeight" Value="Bold" />
    </Style>
</Styles>
