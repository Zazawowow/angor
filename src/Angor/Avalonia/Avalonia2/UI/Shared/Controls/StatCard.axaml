<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:Avalonia2.UI.Shared.Controls">

    <Design.PreviewWith>
        <StackPanel Spacing="12" Width="500">
            <ThemeVariantScope RequestedThemeVariant="Dark">
                <Border Background="{DynamicResource AppBackground}" Padding="16">
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <controls:StatCard Label="Total Balance" Value="10.0000" Unit="BTC" />
                        <controls:StatCard Label="Invested" Value="0.0000" Unit="BTC" />
                        <controls:StatCard Label="Available" Value="10.0000" Unit="BTC" />
                    </StackPanel>
                </Border>
            </ThemeVariantScope>
            <ThemeVariantScope RequestedThemeVariant="Light">
                <Border Background="{DynamicResource AppBackground}" Padding="16">
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <controls:StatCard Label="Total Balance" Value="10.0000" Unit="BTC" />
                        <controls:StatCard Label="Invested" Value="0.0000" Unit="BTC" />
                    </StackPanel>
                </Border>
            </ThemeVariantScope>
        </StackPanel>
    </Design.PreviewWith>

    <!--
        Vue stat-card (orange-tinted):
        Light: background rgba(255,255,255,0.7), border 2px solid rgba(253,186,116,0.4), border-radius 12px
        Dark:  background rgba(42,42,42,0.7),    border 2px solid rgba(234,88,12,0.3)
        Label: text-xs uppercase tracking-wider, color #92400e (light) / #a0a0a0 (dark)
        Value: text-xl font-bold, color #92400e (light) / #fafafa (dark)
    -->
    <Style Selector="controls|StatCard">
        <Setter Property="Template">
            <ControlTemplate TargetType="controls:StatCard">
                <Border Background="{DynamicResource StatCardBackground}"
                        BorderBrush="{DynamicResource StatCardBorder}"
                        BorderThickness="2"
                        CornerRadius="12"
                        Padding="16,12">
                    <StackPanel Spacing="4">
                        <!-- Label â€” Vue: text-xs text-muted uppercase tracking-wider -->
                        <TextBlock Text="{TemplateBinding Label}"
                                   FontSize="11"
                                   FontWeight="SemiBold"
                                   LetterSpacing="0.8"
                                   Foreground="{DynamicResource StatLabel}" />
                        <!-- Value + Unit row -->
                        <StackPanel Orientation="Horizontal" Spacing="4">
                            <TextBlock Text="{TemplateBinding Value}"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource StatValue}" />
                            <TextBlock Text="{TemplateBinding Unit}"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Bottom"
                                       Margin="0,0,0,2"
                                       Foreground="{DynamicResource StatLabel}" />
                        </StackPanel>
                    </StackPanel>
                </Border>
            </ControlTemplate>
        </Setter>
    </Style>

</Styles>
